<?xml version="1.0" encoding="UTF-8"?>
<!-- 30초마다 설정 파일의 변경을 확인 하여 변경시 갱신 -->
<configuration scan="true" scanPeriod="30 seconds">
	<include resource="org/springframework/boot/logging/logback/defaults.xml"/>
	
	<!--property 설정 -->
    <!-- setting -->
    <springProperty scope="context" name="springAppName" source="spring.application.name"/>
	
	<!-- property -->
	<property name="CONTEXT_NAME" value="${context_name}" />
	<property name="LOG_PATH" value="C:\workspace\logs" />
	<contextName>${CONTEXT_NAME}</contextName>
	
	<!-- pattern -->
    <property name="LOG_PATTERN" value="%-4relative [%thread] %-5level %logger{35} - %msg%n"/>
	
	<!-- STDOUT log -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
	
	<!-- FILE log -->
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${springAppName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${LOG_FILE_NAME}.%d{yyyy-MM-dd}_%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- or whenever the file size reaches 100MB -->
				<maxFileSize>5MB</maxFileSize>
				<!-- kb, mb, gb -->
			</timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <root level="INFO">
        <springProfile name="local,dev"> 
            <appender-ref ref="STDOUT" />
            <appender-ref ref="FILE" />
            <appender-ref ref="JSON_FILE" />
        </springProfile>
        <springProfile name="stg"> 
            <appender-ref ref="STDOUT" />
            <!-- <appender-ref ref="JSON_FILE" /> -->
        </springProfile>
        <springProfile name="prod"> 
            <appender-ref ref="STDOUT" />
		</springProfile>
    </root>
    
</configuration>